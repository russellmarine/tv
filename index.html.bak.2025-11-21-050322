      align-items: flex-start;
    }

    .single-video-card {
      flex: 0 1 70%;
      max-width: 960px;
      background: rgba(0,0,0,0.6);
      border-radius: 12px;
      padding: 0.5rem;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .single-side-panel {
      flex: 1;
      min-height: 200px;
      border-radius: 12px;
      border: 1px dashed rgba(255,255,255,0.12);
      background: rgba(0,0,0,0.25);
      box-sizing: border-box;
    }

    /* SINGLE VIEW – responsive video in card */
    #single-player-hls,
    #single-player-yt {
      width: 100%;
      max-width: 100%;
      aspect-ratio: 16 / 9;
      height: auto;
      display: none;
      border-radius: 8px;
      background: #000;
      border: none;
    }

    #grid-view {
      display: none;
    }

    .grid-wrapper {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: minmax(0, 1fr);
      gap: 0.75rem;
    }

    .grid-cell {
      position: relative;
      background: rgba(0,0,0,0.5);
      border-radius: 12px;
      padding: 0.5rem;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      gap: 0.35rem;
    }

    .grid-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.5rem;
      z-index: 2;
    }

    .grid-label {
      padding: 3px 6px;
      background: rgba(0,0,0,0.8);
      font-size: 0.75rem;
      border-radius: 4px;
    }

